<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="15dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/local_btnVerMapa"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="#1dc2c6"
        android:text="Ver mapa"
        android:textSize="14sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/local_imagem"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="120dp"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/local_txtestabelecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prazeres"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/local_txtendereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/local_txtestabelecimento"
            android:text="Rua Juazeiro do norte, 125"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            >

            <TextView
                android:id="@+id/local_txtdistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_distancia"
                android:text="7.8 km"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/local_rtNota"
                style="@android:style/Widget.Holo.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:stepSize=".5"
                android:text="Nota 5" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

