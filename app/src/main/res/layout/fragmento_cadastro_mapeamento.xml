<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layoutTab"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/map_imgMapeamento"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_imagelog" />

                <ImageButton
                    android:id="@+id/register_btnOpImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="83dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_cam" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/register_btnCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_cam2"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/register_btnGalery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_galery"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Estabelecimento"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/map_edtEstabelecimento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="7dp"
                android:background="#eaecec"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="5dp"
                android:hint="Informe o estabelecimento"
                android:textSize="6pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:text="Endereço"
                android:textSize="7pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/map_edtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="7dp"
                    android:background="#eaecec"
                    android:drawableLeft="@android:color/transparent"
                    android:drawablePadding="5dp"
                    android:hint="Informe o endereço"
                    android:textSize="6pt" />

                <EditText
                    android:id="@+id/map_edtNumero"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="7dp"
                    android:background="#eaecec"
                    android:drawableLeft="@android:color/transparent"
                    android:drawablePadding="5dp"
                    android:hint="Nº"
                    android:textSize="6pt" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:text="Categoria"
                android:textSize="7pt" />

            <Spinner
                android:id="@+id/map_spnCategorias"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="7dp"
                android:background="#eaecec"
                android:textColor="@android:color/white"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:text="Descrição"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/map_edtDescricao"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="7dp"
                android:background="#eaecec"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="5dp"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:maxLength="200"
                android:textSize="6pt" />

            <Button
                android:id="@+id/map_btnSolicitar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#1dc2c6"
                android:text="Solicitar Mapeamento"
                android:textColor="@android:color/white"
                android:textSize="7pt" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>