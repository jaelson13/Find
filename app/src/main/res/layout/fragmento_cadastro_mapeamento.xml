<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <RelativeLayout
        android:id="@+id/layoutTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_seta"
            android:textColor="#ce6b01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:text="Novo Mapeamento"
            android:textColor="#ce6b01"
            android:textSize="8pt" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutTab"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_imagelog" />

        <TextView
            android:id="@+id/tvStatusLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Usuário ou Senha invalidos!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="5pt"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Estabelecimento"
            android:textColor="#FFFFFF"
            android:textSize="6pt" />

        <EditText
            android:id="@+id/register_edtNome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="7dp"
            android:background="#FFFFFF"
            android:drawableLeft="@android:color/transparent"
            android:drawablePadding="5dp"
            android:hint="Informe o estabelecimento"
            android:textSize="5pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:text="Endereço"
            android:textColor="#FFFFFF"
            android:textSize="6pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/register_edtEndereco"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="5dp"
                android:hint="Informe o endereço"
                android:textSize="5pt" />

            <EditText
                android:id="@+id/register_edtNumero"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:drawableLeft="@android:color/transparent"
                android:drawablePadding="5dp"
                android:hint="Nº"
                android:textSize="5pt" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:text="Categoria"
            android:textColor="#FFFFFF"
            android:textSize="6pt" />

        <Spinner
            android:id="@+id/spnCategorias"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@android:color/white"
            android:textColor="@android:color/white"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:text="Descrição"
            android:textColor="#FFFFFF"
            android:textSize="6pt" />

        <EditText
            android:id="@+id/register_edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="text|textMultiLine"
            android:layout_marginTop="7dp"
            android:background="#FFFFFF"
            android:drawableLeft="@android:color/transparent"
            android:drawablePadding="5dp"
            android:gravity="top"
            android:maxLength="200"
            android:textSize="5pt" />

        <Button
            android:id="@+id/register_btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#ce6b01"
            android:text="Solicitar Mapeamento"
            android:textColor="@android:color/white"
            android:textSize="7pt" />


    </LinearLayout>

</RelativeLayout>