<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_above="@+id/home_tblayout">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/backgroud"
        android:alpha="0.7"
        />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radioperfil"
        android:src="@drawable/backgroud"
        android:id="@+id/imgPerfil"
        />
    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_below="@+id/imgPerfil"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#262626"
        />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLogin"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStatusLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UsuÃ¡rio ou Senha invalidos!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="5pt"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:hint="@string/email"
            android:textColor="@android:color/white"
            android:textColorHint="#C0C0C0"
            android:textSize="6pt"

            />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#C0C0C0"
            android:textSize="6pt" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="44dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnRecupSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:alpha="0.9"
                android:background="@android:color/transparent"
                android:layout_marginRight="80dp"
                android:hint="Esqueceu a Senha?"
                android:textColorHint="#841c1c"
                android:textSize="5pt" />
            <Button
                android:id="@+id/btnNovaConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:alpha="0.9"
                android:background="@android:color/transparent"
                android:hint="Criar Conta"
                android:textColorHint="#841c1c"
                android:textSize="5pt" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnLogar"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:alpha="0.8"
            android:text="Entrar"
            android:textColor="@android:color/white"
            android:background="@drawable/radiobotoes"/>

    </LinearLayout>

</RelativeLayout>